<!DOCTYPE html>
<html>
   <body>
        <div id="wrapper">
            <h3>ログイン・登録</h3>
            
            <% if @error_message %>
                <div class="form-error">
                    <%= @error_message %>
                </div>
            <% end %>

            <%= form_tag("/login") do %>
                <p>ログインID</p>
                <input class=signup name="login_id" value="<%= @login_id %>">
                <p>パスワード</p>
                <input class=signup placeholder="********" name="password" type="password" value="<%= @password %>">
                <br>
            
                <input class="button_signup" type="submit" value="ログイン">
            <% end %>
    
            <%= link_to("新規登録", "/signup") %>
        </div>
    </body>